{
  "compilerOptions": {
    "target": "es2022",
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
